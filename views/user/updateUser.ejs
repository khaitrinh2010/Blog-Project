<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Update Form</title>
  </head>
  <%-include("../partials/navbar.ejs") %>
  <body>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Update Form
        <i class="fas fa-user-plus"></i>
      </h1>

      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <form action="/api/v1/users/update?_method=put" method="POST" enctype="application/x-www-form-urlencoded">
        <!-- full name -->
        <label for="name">Full Name</label>
        <input type="text"  name="fullname" id="name" value="<%=userFound.fullname%>"/>
        <!-- email -->
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%=userFound.email%>"/>
        <button type="submit">SAVE</button>

      </form>
    </div>
  </body>
  <%-include("../partials/footer.ejs")%>
</html>
